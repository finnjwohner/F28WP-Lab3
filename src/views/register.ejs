<%- include('header'); -%>
  <div class='content'>
   <H1>Register an account</H1>
   <p>Please fill in the form below to register an account with us!</p>
   <style>
     input {
       margin: 1rem 0;
       display: block;
     }
     input[type="checkbox"] {
       display: inline;
     }
    </style>
    <form method="POST" action="./api/register">
     <input type="text" name="username" placeholder="Username" required maxlength="60">
     <input type="password" name="password" placeholder="Password" required maxlength="60">
     <input type="text" name="contact" placeholder="Full Name" required maxlength="30">
     <input type="text" name="phone" placeholder="Phone Number" required maxlength="15">
     <input type="text" name="society" placeholder="Society" required maxlength="60">
     <input type="text" name="addres" placeholder="Address" required maxlength="40">
     <input type="text" name="zipcode" placeholder="Zipcode" required maxlength="5">
     <input type="text" name="city" placeholder="City" required maxlength="30">
     <input type="text" name="fax" placeholder="Fax Number" required maxlength="15">
     <input type="number" name="max_outstanding" placeholder="Max Outstanding" required>
     <input type="submit" value="Register">
   </form>
  </div>
<%- include('footer'); -%>